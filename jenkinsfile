pipeline {
    agent any
    
    environment {
        DEPLOY_DIR = '/var/www/react-app'
        CONTAINER_NAME = 'react-frontend'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/DenisLeonte/open-sky-data-analytics-frontend.git',
                    credentialsId: 'github-credentials'
            }
        }
        
        stage('Build React App') {
            steps {
                sh '''
                    # Install dependencies
                    npm ci
                    
                    # Build production bundle
                    npm run build
                    
                    # Verify build exists
                    ls -la build/
                '''
            }
        }
        
        stage('Deploy') {
            steps {
                sh '''
                    # Stop and remove old container if exists
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true
                    
                    # Create simple Dockerfile for serving
                    cat > Dockerfile.deploy << 'EOF'
FROM nginx:alpine
COPY build /usr/share/nginx/html
RUN echo 'server { listen 9001; location / { root /usr/share/nginx/html; try_files $uri /index.html; } }' > /etc/nginx/conf.d/default.conf
EOF
                    
                    # Build and run new container
                    docker build -f Dockerfile.deploy -t react-app:latest .
                    docker run -d \
                        --name ${CONTAINER_NAME} \
                        -p 3000:9001 \
                        --restart unless-stopped \
                        react-app:latest
                '''
            }
        }
    }
    
    post {
        success {
            echo "Deployment successful! App running on http://${SERVER_IP}:3000"
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}